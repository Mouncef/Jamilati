{% extends 'AppBundle:Frontoffice:index.html.twig' %}

{% block REF %}
    <meta name="keywords" content="جميلتي, موضة ">
    <meta name="description" content="الموضة هي فقرة من فقرات مجلة جميلتي. تجدون بهذه الصفحة جميع المقلات المتخصصة بالموضة" />
{% endblock %}

{% block title %} - موضة {{ parent() }}{% endblock %}

 {% block Articles %}
     <style>
         .filter-button
         {
             font-family: 'Changa',sans-serif;
             font-weight: bold;
             font-size: 18px;
             border: 1px solid #4A1F8E;
             border-radius: 5px;
             text-align: center;
             color: #4A1F8E;
             margin-bottom: 30px;

         }
         .filter-button:hover
         {
             font-size: 18px;
             border: 1px solid #4A1F8E;
             border-radius: 5px;
             text-align: center;
             color: #ffffff;
             background-color: #4A1F8E;

         }
         .btn-default:active .filter-button:active
         {
             background-color: #4A1F8E;
             color: white;
         }


         .gallery_product
         {
             padding: 2px;

         }
         .gallery_product img{
             width: 98%;
             border: 1px solid #4A1F8E;
             border-radius: 2px;
         }

         a .gallery_product:hover{
             opacity: 0.8;
             border: 1px solid #4A1F8E;
             border-radius: 5px;
         }
         .caption {
             position:absolute;
             top:0;
             right:0;
             background: #4A1F8E;
             width:100%;
             height:100%;
             padding:2%;
             display: none;
             text-align:center;
             font-family: 'Changa',sans-serif;
             color:#fff !important;
             z-index:2;
         }
         .navigation{
             font-family: 'Changa',sans-serif;
         }

         .pagination>.active>span, .pagination>.active>span:hover{
             background-color: #4A1F8E;
             border-color: #4A1F8E;
         }

         .pagination>.disabled>span{
             color: #000;
             border-color: #000;
         }
         .pagination>li>a{
             color: #4A1F8E;
             border: 1px solid #000;
         }
         .pagination>li>a:focus, .pagination>li>a:hover, .pagination>li>span:focus, .pagination>li>span:hover{
             color: #FFFFFF;
             background-color: #4A1F8E;
             border-color: #000;
         }
     </style>
     <div class="row">
         <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
             <h2 class="titremode"> موضة </h2>
         </div>

         {% block view_article %}{% endblock %}

         <div align="center">
             <button class="btn btn-default filter-button" data-filter="all">All</button>
             {% if catmode %}
                 {% for category in catmode %}
                     <button class="btn btn-default filter-button" data-filter="{{ category.id }}">{{ category.lib }}</button>
                 {% endfor %}
             {% else %}
                 <div class="alert alert-warning text-right">
                     <p>لا يوجد أي محتوى</p>
                 </div>
             {% endif %}
         </div>
         <br/>

         {% if pagination %}
             {% for article in pagination %}
                 <a href="{{ path('jamilati_modepage_view', {'id':article.id}) }}">
                     <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-4 filter {{ article.catmode.id }}">
                         <div class="caption">
                             <h4>{{ article.titre }}</h4>
                             <p>{{ article.content1[:25] }}</p>
                         </div>
                         <img src="{{ asset('uploads/Mode/Cover/'~article.filename) }}" alt="{{ article.filename }}">
                     </div>
                 </a>
             {% endfor %}


         {% else %}
             <div class="alert alert-warning text-right">
                 <p>لا يوجد أي محتوى</p>
             </div>
         {% endif %}
         <br/>

     </div>
     {# display navigation #}
     <div class="navigation" align="center">
         {{ knp_pagination_render(pagination) }}
     </div>
     <hr class="endmode" />
     <br />


 {% endblock %}